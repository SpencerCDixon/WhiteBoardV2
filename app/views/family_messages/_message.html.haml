  = form_for [current_user.family, FamilyMessage.new] do |f|
    = f.label :message
    = f.text_area :message

    = f.label :category
    = f.select :category, FamilyMessage::CATEGORIES

    = f.submit 'Create Message', class: 'button tiny'
