%h2.text-center= "Message Board - #{Date.today.strftime('%B %d, %Y')}"
%a.button.expand{"data-reveal-id" => "myModal", :href => "#"} Add A Message To Today's Board

#myModal.reveal-modal{"aria-hidden" => "true", "aria-labelledby" => "modalTitle", "data-reveal" => "", :role => "dialog"}
  = form_for [current_user.family, @message || FamilyMessage.new] do |f|
    = f.label :message
    = f.text_area :message

    = f.label :message_category_id
    = f.select :message_category_id, MessageCategory.all.map { |n| [n.name.capitalize, n.id] }

    = f.submit 'Create Message', class: 'button tiny'
