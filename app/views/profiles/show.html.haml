%h1= "Welcome, #{@profile.user.name}"

- unless current_user.has_family?
  = link_to 'Create or join family', new_family_path, class: "button"
- else
  .row
    .large-6.columns
      %h2 Family Members
      %ul
        - current_user.family.users.each do |user|
          %li= user.name

    .large-6.columns
      %h2 Family Updates

  .row
    %h2 Message Board
    = form_for [current_user.family, @message] do |f|
      = f.label :message
      = f.text_area :message

      = f.submit 'Create Message', class: 'button tiny'

    %ul
    - @messages.each do |message|
      %li= "#{message.message} - by #{message.user.name}, #{time_ago_in_words(message.created_at)} ago"


